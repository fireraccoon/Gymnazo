<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" 
        android:layout_marginTop="-8dip"
        android:layout_marginBottom="-8dip"
        
        >

        <Button
            android:id="@+id/main_btnCreateRoutine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-8dip"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:text="Créer routine" />

        <Button
            android:id="@+id/main_btnLoadRoutine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:text="Récupérer Routine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="0.33"
        android:layout_marginBottom="-8dip"
        >

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="Button" 
            android:layout_marginRight="-8dip"
            android:layout_marginLeft="-8dip"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:layout_marginBottom="-8dip"
         >

        <Button
            android:id="@+id/main_btnPerformances"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-8dip"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:text="Performances" />

        <Button
            android:id="@+id/main_btnSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:text="Réglages" />

    </LinearLayout>

</LinearLayout>
