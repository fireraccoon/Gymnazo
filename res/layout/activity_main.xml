<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" 
        android:layout_marginTop="-8dip"
        android:layout_marginBottom="-8dip"
        
        >

        <Button
            android:id="@+id/main_btnCreateRoutine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-8dip"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:drawableTop="@drawable/stopwatch_add"
            android:paddingTop="30dp"
            android:text="@string/creer_routine" />

        <Button
            android:id="@+id/main_btnLoadRoutine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:drawableTop="@drawable/stopwatch"
            android:paddingTop="33dp"
            android:text="@string/r_cup_rer_routine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bananee" 
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:layout_marginBottom="-8dip"
         >

        <Button
            android:id="@+id/main_btnPerformances"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-8dip"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:drawableTop="@drawable/weight"
            android:paddingTop="40dp"
            android:text="@string/performances" />

        <Button
            android:id="@+id/main_btnSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-8dip"
            android:layout_weight="0.50"
            android:text="@string/reglages" />

    </LinearLayout>

</LinearLayout>
